            <label class="col-lg-2">Mã số nhân viên</label>
            <input class="col-lg-3" type="text" name="EmpId" />
        </div>
        <div class="form-group row">
            <label class="col-lg-2">Họ tên</label>
            <input class="col-lg-3" type="text" name="Name" />
        </div>
