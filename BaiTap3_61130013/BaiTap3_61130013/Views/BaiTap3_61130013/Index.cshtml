}
@Styles.Render("~/Content/css")
<div class="container navbar-fixed-top">
    <h2 style="line-height: 100px">Thông tin thành viên đăng ký</h2>
    <form name="f1" action="/BaiTap3_61130013/Index" method="post" enctype="multipart/form-data">
